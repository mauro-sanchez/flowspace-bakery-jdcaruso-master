%h3 New Cookies for oven '#{@oven.name}'

= form_for [@oven, @cookie] do |f|
  .row
    .small-8.columns
      = f.label :fillings
  .row
    .small-8.columns
      = f.text_field :fillings
  .row
    .small-8.columns
      = f.label :qty
  .row
    .small-8.columns
      = number_field_tag "cookie[qty]", 1

  .row
    .small-8.columns
      = f.submit 'Mix and bake', class: 'button'



